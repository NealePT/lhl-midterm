    <section>
      <div class="recent-likes">
        <h2>Recent Likes</h2>
      </div>
      <div class="card-deck">
        <div class="card text-white bg-dark mb-3">
          <div class="card-body">
            <h5 class="card-title">Card title</h5>
            <p class="card-text">This card has supporting text below as a natural lead-in to additional content.</p>
          </div>
          <div class="card-footer">
            <small class="text-muted">Last updated 3 mins ago</small>
            <a href="/collections/<%= resourceID %>/update">
              <button type="submit" class="btn btn-outline-light">Edit</button>
            </a>
          </div>
        </div>
        <div class="card text-white bg-dark mb-3">
          <div class="card-body">
            <h5 class="card-title">Card title</h5>
            <p class="card-text">This card has supporting text below as a natural lead-in to additional content.</p>
          </div>
          <div class="card-footer">
            <small class="text-muted">Last updated 3 mins ago</small>
            <a href="/collections/<%= resourceID %>/update">
              <button type="button" class="btn btn-outline-light">Edit</button>
            </a>
          </div>
        </div>
        <div class=" card text-white bg-dark mb-3">
          <div class="card-body">
            <h5 class="card-title">Card title</h5>
            <p class="card-text">This card has supporting text below as a natural lead-in to additional content.
            </p>
          </div>
          <div class="card-footer">
            <small class="text-muted">Last updated 3 mins ago</small>
            <a href="/collections/<%= resourceID %>/update">
              <button type="submit" class="btn btn-outline-light">Edit</button>
            </a>
          </div>
        </div>
      </div>


      <div class="user-collection">
        <h2>User's Collection</h2>
      </div>
      <% for (const resource of resourceID) { %>
        <div class="card-deck">
          <div class="card text-white bg-dark mb-3">
            <div class="card-body">
              <h5 class="card-title">
                <%= resource.title %>
              </h5>
              <p class="card-text">
                <%= resource.description %>
              </p>
            </div>
            <div class="card-footer">
              <small class="text-muted">
                <%= resource.date_created %>
              </small>
              <a href="/collections/<%= resourceID %>/update">
                <button type="submit" class="btn btn-outline-light">Edit</button>
              </a>
            </div>
          </div>
          <% } %>
    </section>

</body>

</html>
