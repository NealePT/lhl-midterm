<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="../styles/collections_show.css">
  <title>Resource Page</title>
</head>
<body>

  <main id="container">

    <header id="header">
      <div id="publication-info">
        <span id="owner-name">Posted by <%= name %></span>
        <span id="dates">
          <p id="date-published"><%= date_created %></p>
          <p id="date-modified">
            <%= date_modified ? `(Edited: ${date_modified})`: ''  %>
          </p>
        </span>
      </div>
      <h1 id="resource-title"><%= title %></h1>
      <div id="rating-likes">
        <p id="rating-score"><%= rating ? `${rating}/5 Rating` : '(No ratings yet)' %></p>
        <p id="likes"><%= likes ? likes : 0 %> Likes</p>
      </div>
    </header>

    <article>

      <!-- Description section -->
      <section id="description">
        <p><%= description %></p>
      </section>

      <!-- URL section -->
      <section id="url">
        <p><strong><a href="<%= url %>"><%= url %></a></strong></p>
      </section>

      <!-- Edit section -->
      <section id="edit-button">
        <button type="button">Edit</button>
      </section>

      <!-- Ratings section -->
      <section id="rating-buttons">
        <span id="rating-title">Rating</span>
        <div>
          1<input type="radio" name="rating">
          2<input type="radio" name="rating">
          3<input type="radio" name="rating">
          4<input type="radio" name="rating">
          5<input type="radio" name="rating">
        </div>
      </section>

      <!-- Comments section -->
      <section>
        <h2 id="comments-title">Comments</h2>
        <div id="comments">

          <% if (comments.length === 0) { %>
            <span class="comment-details">
              <p class="comment-body">No comments yet.</p>
            </span>
          <% } %>

          <% if (comments.length > 0) { %>
            <% for (const obj of comments) { %>
              <span class="comment-details">
                <p class="user-name"><b><%= obj.name %></b></p>
                <p class="comment-body"><%= obj.comment %></p>
              </span>
            <% } %>
          <% } %>
        </div>
      </section>

    </article>
  </main>
</body>
</html>
