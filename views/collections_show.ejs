<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- External CSS -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" type="text/css">

  <!-- App CSS -->
  <link rel="stylesheet" href="../styles/collections_show.css">

  <!-- Bootstrap -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
  <title>Resource Page</title>
</head>
<body>
  <%- include('partials/_header') %>
  <main>

    <header>
      <div id="publication-info">
        <span id="owner-name">Posted by <%= name %></span>

        <!-- Temporary implementation - need to style properly. -->
        <span><%= category %></span>

        <span id="dates">
          <p id="date-published"><%= date_created %></p>
          <p id="date-modified">
            <%= date_modified ? `(Edited: ${date_modified})`: ''  %>
          </p>
        </span>
      </div>
      <h1 id="resource-title"><%= title %></h1>
      <div id="rating-likes">
        <p id="rating-score"><%= avgRating ? `${avgRating}/5 Rating` : '(No ratings yet)' %></p>
        <p id="likes"><%= likes ? likes : 0 %> Likes</p>
      </div>
    </header>

    <article>

      <!-- Description section -->
      <section id="description">
        <p><%= description %></p>
      </section>

      <!-- URL section -->
      <section id="url">
        <p><strong><a href="<%= url %>"><%= url %></a></strong></p>
      </section>

      <!-- Edit section -->
      <section id="edit-button">
        <a href="/collections/<%= resourceID %>/update"><button type="button">Edit</button></a>
      </section>

      <% if(!checkLike) { %>
        <section>
          <form action="/collections/<%= resourceID  %>/like" method="POST">
            <button type="submit">Like this Page</button>
          </form>
        </section>
      <% } else { %>
        <section>
          <form action="/collections/<%= resourceID  %>/unlike" method="POST">
            <button type="submit">Unlike this Page</button>
          </form>
        </section>
      <% } %>

      <!-- Ratings section -->
      <section id="rating-buttons">
        <% if(!userRating) { %>
          <span id="rating-title">Rate This Page</span>
          <div>
            <form action="/collections/<%= resourceID  %>/rating" method="POST">
              <button class="star-buttons" name="rating" type="submit" value="1">
                <i id="star-1" class="fa-solid fa-star"></i>
              </button>
              <button class="star-buttons" name="rating" type="submit" value="2">
                <i id="star-2" class="fa-solid fa-star"></i>
              </button>
              <button class="star-buttons" name="rating" type="submit" value="3">
                <i id="star-3" class="fa-solid fa-star"></i>
              </button>
              <button class="star-buttons" name="rating" type="submit" value="4">
                <i id="star-4" class="fa-solid fa-star"></i>
              </button>
              <button class="star-buttons" name="rating" type="submit" value="5">
                <i id="star-5" class="fa-solid fa-star"></i>
              </button>
            </form>
        <% } else { %>
          <span id="rating-title">Your Rating</span>
          <div>
          <% if (userRating === 1) { %>
            <button class="star-buttons-disabled" name="rating" type="submit" value="1">
              <i class="fa-solid fa-star" style="color: gold;"></i>
            </button>
          <% } else { %>
            <button class="star-buttons-disabled" name="rating" type="submit" value="1">
              <i class="fa-solid fa-star"></i>
            </button>
          <% } %>

          <% if (userRating === 2) { %>
            <button class="star-buttons-disabled" name="rating" type="submit" value="2">
              <i class="fa-solid fa-star" style="color: gold;"></i>
            </button>
          <% } else { %>
            <button class="star-buttons-disabled" name="rating" type="submit" value="2">
              <i class="fa-solid fa-star"></i>
            </button>
          <% } %>

          <% if (userRating === 3) { %>
            <button class="star-buttons-disabled" name="rating" type="submit" value="3">
              <i class="fa-solid fa-star" style="color: gold;"></i>
            </button>
          <% } else { %>
            <button class="star-buttons-disabled" name="rating" type="submit" value="3">
              <i class="fa-solid fa-star"></i>
            </button>
          <% } %>

          <% if (userRating === 4) { %>
            <button class="star-buttons-disabled" name="rating" type="submit" value="4">
              <i class="fa-solid fa-star" style="color: gold;"></i>
            </button>
          <% } else { %>
            <button class="star-buttons-disabled" name="rating" type="submit" value="4">
              <i class="fa-solid fa-star"></i>
            </button>
          <% } %>

          <% if (userRating === 5) { %>
            <button class="star-buttons-disabled" name="rating" type="submit" value="1">
              <i class="fa-solid fa-star" style="color: gold;"></i>
            </button>
          <% } else { %>
            <button class="star-buttons-disabled" name="rating" type="submit" value="1">
              <i class="fa-solid fa-star"></i>
            </button>
          <% } %>
          </div>
        <% } %>



        </div>

      </section>

      <!-- Comments section -->
      <section id="comments-section">

        <div>
          <form id="comment-textbox" action="/collections/<%= resourceID  %>/comment" method="POST">
            <label for="comment-text"></label>
            <textarea id="comment-textarea" name="comment-text" rows="5" cols="100" placeholder="What are your thoughts?"></textarea>
            <button id="comment-button" type="submit">Comment</button>
          </form>
        </div>

        <div id="comments-all">
          <% if (comments.length === 0) { %>
            <span class="comment-details">
              <p class="comment-body">Leave the first comment!</p>
            </span>
          <% } %>

          <% if (comments.length > 0) { %>
            <% for (const obj of comments) { %>
              <span class="comment-details">
                <p class="user-name"><b><%= obj.name %></b></p>
                <p class="comment-body"><%= obj.comment %></p>
              </span>
            <% } %>
          <% } %>
        </div>
      </section>

    </article>
  </main>
</body>
</html>
