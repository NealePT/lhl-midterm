<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="../styles/collections_show.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" type="text/css">
  <title>Resource Page</title>
</head>
<body>

  <main>

    <header>
      <div id="publication-info">
        <span id="owner-name">Posted by <%= name %></span>

        <!-- Temporary implementation - need to style properly. -->
        <span><%= category %></span>

        <span id="dates">
          <p id="date-published"><%= date_created %></p>
          <p id="date-modified">
            <%= date_modified ? `(Edited: ${date_modified})`: ''  %>
          </p>
        </span>
      </div>
      <h1 id="resource-title"><%= title %></h1>
      <div id="rating-likes">
        <p id="rating-score"><%= rating ? `${rating}/5 Rating` : '(No ratings yet)' %></p>
        <p id="likes"><%= likes ? likes : 0 %> Likes</p>
      </div>
    </header>

    <article>

      <!-- Description section -->
      <section id="description">
        <p><%= description %></p>
      </section>

      <!-- URL section -->
      <section id="url">
        <p><strong><a href="<%= url %>"><%= url %></a></strong></p>
      </section>

      <!-- Edit section -->
      <section id="edit-button">
        <a href="/collections/<%= resourceID %>/update"><button type="button">Edit</button></a>
      </section>

      <section">
        <form action="/collections/<%= resourceID  %>/like" method="POST">
          <a><button type="button">Like this Page</button></a>
        </form>
      </section>

      <!-- Ratings section -->
      <section id="rating-buttons">
        <span id="rating-title">Rate This Page</span>
        <div>
          <i class="fa-solid fa-star"></i>
          <i class="fa-solid fa-star"></i>
          <i class="fa-solid fa-star"></i>
          <i class="fa-solid fa-star"></i>
          <i class="fa-solid fa-star"></i>
        </div>
      </section>

      <!-- Comments section -->
      <section id="comments-section">

        <div>
          <form id="comment-textbox" action="/collections/<%= resourceID  %>/comment" method="POST">
            <label for="comment-text"></label>
            <textarea id="comment-textarea" name="comment-text" rows="5" cols="100" placeholder="What are your thoughts?"></textarea>
            <button id="comment-button" type="submit">Comment</button>
          </form>
        </div>

        <div id="comments-all">
          <% if (comments.length === 0) { %>
            <span class="comment-details">
              <p class="comment-body">Leave the first comment!</p>
            </span>
          <% } %>

          <% if (comments.length > 0) { %>
            <% for (const obj of comments) { %>
              <span class="comment-details">
                <p class="user-name"><b><%= obj.name %></b></p>
                <p class="comment-body"><%= obj.comment %></p>
              </span>
            <% } %>
          <% } %>
        </div>
      </section>

    </article>
  </main>
</body>
</html>
